<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--//////////////////////////// Splash screen //////////////////////////////////////////////-->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/uber_clone_rider_splash</item>
    </style>

    <!--//////////////////////////// Login theme ////////////////////////////////////////////////-->
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/uber_clone_rider_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--//////////////////////////// Register dialog theme //////////////////////////////////////-->
    <style name="DialogTheme" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!--//////////////////////////// Add photo text view ////////////////////////////////////////-->
    <style name="add_photo_image_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>